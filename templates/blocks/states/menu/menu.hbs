self.states.add({{{ name }}}, function(name) {
    return new MenuState(name, {
        question: {{{ question }}},
        {{#if choices}}
            choices: [
                {{#each choices}}
                    {{{ choices }}},
                {{/each}}
                ].join('\n')
        {{/if}}
        {{#each opts}}
            {{ label }} : {{{ value }}},
        {{/each}}
    });
});